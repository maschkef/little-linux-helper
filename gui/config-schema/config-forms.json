            {
              "key": "CFG_LH_LANG",
              "type": "select",
              "label": "Preferred language",
              "labelKey": "config.forms.generalLanguage.fields.CFG_LH_LANG.label",
              "help": "Set to 'auto' to match the current system locale automatically.",
              "helpKey": "config.forms.generalLanguage.fields.CFG_LH_LANG.help",
              "options": [
                {
                  "value": "auto",
                  "label": "Auto detect (system locale)",
                  "labelKey": "config.forms.generalLanguage.fields.CFG_LH_LANG.options.auto"
                },
                {
                  "value": "de",
                  "label": "German",
                  "labelKey": "config.forms.generalLanguage.fields.CFG_LH_LANG.options.de"
