    "general.d/30-gui.conf": {
      "configType": "general",
      "displayKey": "config.generalGui",
      "label": "GUI Server",
      "description": "Adjust host and port of the Little Linux Helper web interface.",
      "descriptionKey": "config.forms.generalGui.description",
      "groups": [
        {
          "title": "Network",
          "titleKey": "config.forms.generalGui.groups.network.title",
          "fields": [
            {
              "key": "CFG_LH_GUI_PORT",
              "type": "number",
              "label": "Listening port",
              "labelKey": "config.forms.generalGui.fields.CFG_LH_GUI_PORT.label",
              "help": "Choose a port between 1 and 65535.",
              "helpKey": "config.forms.generalGui.fields.CFG_LH_GUI_PORT.help",
              "min": 1,
              "max": 65535,
              "default": "3000"
