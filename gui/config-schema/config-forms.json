    "general.d/10-logging-core.conf": {
      "configType": "general",
      "displayKey": "config.generalLoggingCore",
      "label": "Logging (Core)",
      "description": "Control the verbosity of the helper and where log messages should be written.",
      "descriptionKey": "config.forms.generalLoggingCore.description",
      "groups": [
        {
          "title": "Log level",
          "titleKey": "config.forms.generalLoggingCore.groups.logLevel.title",
          "fields": [
            {
              "key": "CFG_LH_LOG_LEVEL",
              "type": "select",
              "label": "Log level",
              "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.label",
              "help": "Select how much information should be emitted during runs.",
              "helpKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.help",
              "options": [
                {
                  "value": "ERROR",
                  "label": "Errors only",
                  "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.options.ERROR"
                },
                {
                  "value": "WARN",
                  "label": "Warnings and errors",
                  "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.options.WARN"
                },
                {
                  "value": "INFO",
                  "label": "Informational messages",
                  "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.options.INFO"
                },
                {
                  "value": "DEBUG",
                  "label": "Detailed debug output",
                  "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_LEVEL.options.DEBUG"
                }
              ],
              "default": "INFO"
            }
          ]
        },
        {
          "title": "Output",
          "titleKey": "config.forms.generalLoggingCore.groups.output.title",
          "fields": [
            {
              "key": "CFG_LH_LOG_TO_CONSOLE",
              "type": "toggle",
              "label": "Send logs to console",
              "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_TO_CONSOLE.label",
              "help": "Disable when you only want logs written to the log file.",
              "helpKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_TO_CONSOLE.help"
            },
            {
              "key": "CFG_LH_LOG_TO_FILE",
              "type": "toggle",
              "label": "Write logs to file",
              "labelKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_TO_FILE.label",
              "help": "Disable to prevent creation of log files in the log directory.",
              "helpKey": "config.forms.generalLoggingCore.fields.CFG_LH_LOG_TO_FILE.help"
            }
          ]
        }
      ]
