            {
              "key": "CFG_LH_GUI_HOST",
              "type": "text",
              "label": "Host binding",
              "labelKey": "config.forms.generalGui.fields.CFG_LH_GUI_HOST.label",
              "help": "Use 'localhost' to restrict access or '0.0.0.0' to serve other devices.",
              "helpKey": "config.forms.generalGui.fields.CFG_LH_GUI_HOST.help"
            },
            {
              "key": "CFG_LH_GUI_FIREWALL_RESTRICTION",
              "type": "text",
              "label": "Firewall scope",
              "labelKey": "config.forms.generalGui.fields.CFG_LH_GUI_FIREWALL_RESTRICTION.label",
              "help": "Values: 'all', 'local', or a CIDR (e.g. 192.168.1.0/24).",
              "helpKey": "config.forms.generalGui.fields.CFG_LH_GUI_FIREWALL_RESTRICTION.help"
            }
          ]
        }
      ]
    },
    "general.d/40-gui-auth.conf": {
      "configType": "general",
      "displayKey": "config.generalGuiAuth",
      "label": "GUI Authentication",
      "description": "Manage login requirements for the GUI when running on shared machines.",
      "advanced": true,
      "descriptionKey": "config.forms.generalGuiAuth.description",
      "groups": [
        {
          "title": "Mode",
          "titleKey": "config.forms.generalGuiAuth.groups.mode.title",
          "fields": [
            {
              "key": "LLH_GUI_AUTH_MODE",
              "type": "select",
              "label": "Authentication mode",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_AUTH_MODE.label",
              "options": [
                {
                  "value": "auto",
                  "label": "Auto (local = open, remote = login)",
                  "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_AUTH_MODE.options.auto"
                },
                {
                  "value": "session",
                  "label": "Session login (username + password)",
                  "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_AUTH_MODE.options.session"
                },
                {
                  "value": "basic",
                  "label": "HTTP basic auth",
                  "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_AUTH_MODE.options.basic"
                },
                {
                  "value": "none",
                  "label": "No authentication (loopback only)",
                  "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_AUTH_MODE.options.none"
                }
              ],
              "default": "auto"
            }
          ]
        },
        {
          "title": "Credentials",
          "titleKey": "config.forms.generalGuiAuth.groups.credentials.title",
          "fields": [
            {
              "key": "LLH_GUI_USER",
              "type": "text",
              "label": "Username",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_USER.label",
              "placeholder": "admin",
              "placeholderKey": "config.forms.generalGuiAuth.fields.LLH_GUI_USER.placeholder"
            },
            {
              "key": "LLH_GUI_PASS_HASH",
              "type": "text",
              "label": "Password hash",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_PASS_HASH.label",
              "help": "Use the bundled --hash-password helper to generate bcrypt hashes.",
              "helpKey": "config.forms.generalGuiAuth.fields.LLH_GUI_PASS_HASH.help",
              "advanced": true
            },
            {
              "key": "LLH_GUI_PASS_PLAIN",
              "type": "text",
              "label": "Plaintext password (development only)",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_PASS_PLAIN.label",
              "help": "Only use in development environments, hashes are preferred.",
              "helpKey": "config.forms.generalGuiAuth.fields.LLH_GUI_PASS_PLAIN.help"
            }
          ]
        },
        {
          "title": "Cookies",
          "titleKey": "config.forms.generalGuiAuth.groups.cookies.title",
          "fields": [
            {
              "key": "LLH_GUI_COOKIE_NAME",
              "type": "text",
              "label": "Session cookie name",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_COOKIE_NAME.label"
            },
            {
              "key": "LLH_GUI_COOKIE_SECURE",
              "type": "toggle",
              "label": "Mark cookie as secure",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_COOKIE_SECURE.label",
              "help": "Disable only when serving plain HTTP on localhost.",
              "helpKey": "config.forms.generalGuiAuth.fields.LLH_GUI_COOKIE_SECURE.help"
            }
          ]
        },
        {
          "title": "Cross-origin requests",
          "titleKey": "config.forms.generalGuiAuth.groups.cors.title",
          "fields": [
            {
              "key": "LLH_GUI_ALLOWED_ORIGINS",
              "type": "textarea",
              "label": "Allowed origins",
              "label": "Allowed origins",
              "labelKey": "config.forms.generalGuiAuth.fields.LLH_GUI_ALLOWED_ORIGINS.label",
              "help": "Comma separated list of origins that may access the API (e.g. http://localhost:3001).",
              "helpKey": "config.forms.generalGuiAuth.fields.LLH_GUI_ALLOWED_ORIGINS.help"
            }
          ]
        }
      ]
    },
